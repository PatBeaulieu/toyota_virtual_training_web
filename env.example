# Environment Configuration for Toyota Virtual Training Session Admin
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control

# Django Settings
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.rtmtoyota.ca,.yourdomain.com

# Database Configuration
DB_NAME=toyota_training
DB_USER=toyota_user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@rtmtoyota.ca

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/1

# Admin URL (for security)
ADMIN_URL=django-admin/

# Production Environment
ENVIRONMENT=production
