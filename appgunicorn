#!/bin/bash
# This script handles the appgunicorn command that Render is trying to run

echo "ðŸš€ Redirecting appgunicorn to gunicorn..."

# Install gunicorn if not available
if ! command -v gunicorn &> /dev/null; then
    echo "Installing gunicorn..."
    pip install gunicorn==21.2.0
fi

# Execute the gunicorn command with the same arguments
exec gunicorn "$@"